{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Import

		"baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./dist/*", ""],
			"@screens/*": ["src/screens/*"],
      "@hooks/*": ["src/hooks/*"],
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/routes/*"],
			"@store/*": ["src/store/*"],
			"@services/*": ["src/services/*"],
			"@assets/*": ["src/assets/*"],
			"@config/*": ["src/api/*"],
			"@types/*": ["src/types/*"],
			"@images/*": ["src/images/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
